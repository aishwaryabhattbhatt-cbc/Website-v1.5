---
// 1. DATA: Change your text here without touching the HTML below
const titleHighlight = "Media & Tech";
const titleBase = "insights for data driven decisions";
const subtitle = "Unlock a clearer understanding of how Canadians consume media and adopt new technologies. MTM turns complex datasets into actionable insights so you can plan confidently and stay ahead of change.";
const primaryBtn = "Request A Demo";
const secondaryBtn = "Explore More";

// 2. STYLES: Import your CSS files
import './hero.css';
import './hero-animation.css';
---

<section class="hero">
  <div class="page-inner hero-grid">
    <div class="hero-left">
      <h1 class="hero-title">
        <span class="hl-text">
          {titleHighlight}
        </span>
        <span class="hero-title-base">{titleBase}</span>
      </h1>

      <p class="hero-subtitle">{subtitle}</p>
      
      <div class="hero-actions">
        <button class="btn btn-primary">{primaryBtn}</button>
        <button class="btn btn-secondary">{secondaryBtn}</button>
      </div>
    </div>

    <div class="hero-right">
      <div class="hero-visual" data-hero-scene></div>
    </div>
  </div>
</section>

<script src="./scene.js"></script>
<script src="./main.js"></script>